---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import '../styles.css';
import type { SeoMetadata } from '../storyblok/types';

interface Props {
  seo_metadata?: SeoMetadata | undefined;
}

const { seo_metadata } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />

    <title>{seo_metadata?.title} | CodeGov</title>
    <meta name="description" content={seo_metadata?.description} />
  </head>
  <body class="flex flex-col">
    <Navbar />

    <main class="container mx-auto flex-1 px-4 py-5">
      <slot />
    </main>

    <footer>
      <Footer />
    </footer>
  </body>
</html>
